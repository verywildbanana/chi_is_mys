<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:avocado="http://schemas.avocado.com/mys"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="5dp"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/ProfileImgLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/photo_hos" />

        <ImageView
            android:id="@+id/ProfileImg"
            android:layout_width="88dp"
            android:layout_height="88dp"

            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/EventImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:src="@drawable/cheeseicon" />

    <RelativeLayout
        android:id="@+id/DetailLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/EventImg"
        android:layout_toRightOf="@+id/ProfileImgLay"
        android:gravity="center_vertical"
        android:paddingLeft="15dp">

        <LinearLayout
            android:id="@+id/LocationLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/PlaceIconImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/placeicon" />

            <TextView
                android:id="@+id/DistanceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="000m"
                android:textColor="@color/gray"
                android:textSize="13dp" />

        </LinearLayout>


        <TextView
            android:id="@+id/TitleTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/LocationLay"
            android:singleLine="true"
            android:text="지엔 치과"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/SubTitleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TitleTxt"
            android:lines="2"
            android:text="서울시 강남구 역삼동 749-12번지\n엘리빌 202호"
            android:textColor="@color/gray"
            android:textSize="13dp" />

        <LinearLayout
            android:id="@+id/TagLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SubTitleTxt"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <include layout="@layout/layout_taglay" />
            <include layout="@layout/layout_taglay" />
            <include layout="@layout/layout_taglay" />


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>