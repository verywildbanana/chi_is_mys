<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:avocado="http://schemas.avocado.com/mys"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="5dp"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/ProfileImgLay"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp">


        <ImageView
            android:id="@+id/ProfileDftImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/photo_hos" />

        <ImageView
            android:id="@+id/ProfileImg"
            android:layout_width="90dp"
            android:layout_height="90dp"

            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/DetailLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/ProfileImgLay"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/EventImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="22dp"
            android:visibility="gone"
            android:src="@drawable/cheeseicon" />

        <LinearLayout
            android:id="@+id/LocationLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/PlaceIconImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/placeicon" />

            <com.avocado.makeyoursmile.view.AVTextView
                android:id="@+id/DistanceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="000m"
                android:textColor="@color/mys_txt_dark_gray_83"
                android:textSize="10dp" />

        </LinearLayout>


        <com.avocado.makeyoursmile.view.AVTextView
            android:id="@+id/TitleTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/EventImg"
            android:singleLine="true"
            android:textColor="@color/mys_txt_dark_gray_83"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />

        <com.avocado.makeyoursmile.view.AVTextView
            android:id="@+id/SubTitleTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TitleTxt"
            android:layout_toLeftOf="@+id/EventImg"
            android:lines="2"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <LinearLayout
            android:id="@+id/TagLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SubTitleTxt"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>