<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:avocado="http://schemas.avocado.com/mys"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mys_bg_238"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/TitleBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/mys_titlebar_0">


        <ImageView
            android:id="@+id/TitleImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/toplogo" />

        <ImageView
            android:id="@+id/TitleSearchImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/searchicon" />


        <ImageView
            android:id="@+id/TitleLogoImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/TitleSearchImg"
            android:src="@drawable/makeyoursmile" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/BannerBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/TitleBar"
        android:background="@color/mys_banner">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ThemeLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BannerBar"
        >


        <com.avocado.makeyoursmile.view.AVTextView
            android:id="@+id/ThemeLayTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="테마별 보기"
            android:textColor="@color/mys_txt_dark_gray_83"
            android:textSize="12dp"
            android:layout_marginTop="12dp"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ThemeLayTitle"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >


            <ImageView
                android:id="@+id/ToothTheme1"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:src="@drawable/theme1"
                />

            <ImageView
                android:id="@+id/ToothTheme2"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:src="@drawable/theme2"
                android:layout_alignParentRight="true"
                />

            <ImageView
                android:id="@+id/ToothTheme3"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:src="@drawable/theme3"
                android:layout_alignParentBottom="true"
                />

            <ImageView
                android:id="@+id/ToothTheme4"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:src="@drawable/theme4"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>



        </RelativeLayout>


    <RelativeLayout
        android:id="@+id/BottomTabLay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true">


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/mys_stroke_color_149" />

        <ImageView
            android:id="@+id/PictureBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:src="@drawable/letchiisicon" />


        <ImageView
            android:id="@+id/HomeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="23dp"
            android:src="@drawable/homeicon" />


        <ImageView
            android:id="@+id/QueryBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/HomeBtn"
            android:src="@drawable/estimateicon" />


        <ImageView
            android:id="@+id/SettingBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="23dp"
            android:src="@drawable/settingicon" />

        <ImageView
            android:id="@+id/EventBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/SettingBtn"
            android:src="@drawable/eventicon" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ListLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/BottomTabLay"
        android:layout_below="@+id/ThemeLay"
        android:layout_marginTop="12dp">

        <com.avocado.makeyoursmile.view.AVTextView
            android:id="@+id/ListLayTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="내 주변 병원"
            android:textColor="@color/mys_txt_dark_gray_83"
            android:textSize="12dp"
            />

        <com.avocado.makeyoursmile.view.AVTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="더보기"
            android:textColor="@color/mys_txt_dark_gray_83"
            android:layout_alignParentRight="true"
            android:textSize="12dp"
            />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/ListRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ListLayTitle"
            android:layout_marginTop="5dp"
            android:scrollbars="none" />

    </RelativeLayout>


</RelativeLayout>