<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:avocado="http://schemas.avocado.com/mys"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mys_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/TitleBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/mys_titlebar">


        <ImageView
            android:id="@+id/TitleLeftImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/top_back" />

        <com.avocado.makeyoursmile.view.AVTextView
            android:id="@+id/TitleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/TitleLeftImg"
            android:text="견적문의"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/TitleSearchImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/searchicon" />


        <ImageView
            android:id="@+id/TitleLogoImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/TitleSearchImg"
            android:src="@drawable/makeyoursmile" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/TitleBar"
        android:orientation="vertical">

        <com.avocado.makeyoursmile.view.AVTextView
            android:id="@+id/SubTitleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:text="나의 문의 현황"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold" />

        <com.avocado.makeyoursmile.view.AVEditText
            android:id="@+id/EstimateEditTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SubTitleTxt"
            android:layout_centerHorizontal="true"
            android:gravity="top"
            android:hint="견적문의는 로그인 필요 합니다."
            android:padding="5dp"
            android:background="@drawable/requestbox"
            android:textColor="@color/mys_txt_dark_gray"
            android:textSize="10dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/cheesebg"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/FacebookImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/facebook"
                android:layout_marginTop="70dp"
                />

            <ImageView
                android:id="@+id/KakaoImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/kakao"
                android:layout_below="@+id/FacebookImg"
                android:layout_marginTop="10dp"
                />

            <com.avocado.makeyoursmile.view.AVTextView
                android:id="@+id/SubBtnTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="&quot;치이즈에 가입 후 다양한 서비스를 이용하세요. &quot;"
                android:layout_marginBottom="70dp"
                android:textColor="@color/mys_txt_dark_gray"
                android:textSize="12dp"
                />

            <com.avocado.makeyoursmile.view.AVTextView
                android:layout_above="@+id/SubBtnTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="가입하기"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>