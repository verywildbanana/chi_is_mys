<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:avocado="http://schemas.avocado.com/mys"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/List1List"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white_op50">

                <com.avocado.makeyoursmile.view.AVTextView
                    android:id="@+id/CountTxt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:text="000"
                    android:textColor="@color/mys_txt_dark_gray_83"
                    android:textSize="8dp" />

                <com.avocado.makeyoursmile.view.AVToggleButton
                    android:id="@+id/ToggleLike1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/CountTxt1"
                    avocado:ToggleButtonOffImage="@drawable/likeblank"
                    avocado:ToggleButtonOnImage="@drawable/likefull" />

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent" />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/List2List"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white_op50">

                <com.avocado.makeyoursmile.view.AVTextView
                    android:id="@+id/CountTxt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:text="000"
                    android:textColor="@color/mys_txt_dark_gray_83"
                    android:textSize="8dp" />

                <com.avocado.makeyoursmile.view.AVToggleButton
                    android:id="@+id/ToggleLike2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/CountTxt2"
                    avocado:ToggleButtonOffImage="@drawable/likeblank"
                    avocado:ToggleButtonOnImage="@drawable/likefull" />

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/List3List"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white_op50">

                <com.avocado.makeyoursmile.view.AVTextView
                    android:id="@+id/CountTxt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:text="000"
                    android:textColor="@color/mys_txt_dark_gray_83"
                    android:textSize="8dp" />

                <com.avocado.makeyoursmile.view.AVToggleButton
                    android:id="@+id/ToggleLike3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/CountTxt3"
                    avocado:ToggleButtonOffImage="@drawable/likeblank"
                    avocado:ToggleButtonOnImage="@drawable/likefull" />

            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>