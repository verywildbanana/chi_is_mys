<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:avocado="http://schemas.avocado.com/mys"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mys_bg_238"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/TitleBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/mys_titlebar_0">


        <ImageView
            android:id="@+id/TitleLeftImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/top_back" />

        <com.avocado.makeyoursmile.view.AVTextView
            android:id="@+id/TitleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/TitleLeftImg"
            android:text="병원 제휴 및 계정 신청"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/TitleSearchImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/searchicon" />


        <ImageView
            android:id="@+id/TitleLogoImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/TitleSearchImg"
            android:src="@drawable/makeyoursmile" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/TitleBar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.avocado.makeyoursmile.view.AVTextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="19dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="병원 정보"
                android:textColor="@color/mys_titlebar_0"
                android:textSize="12dp"
                android:textStyle="bold" />

            <com.avocado.makeyoursmile.view.AVEditText
                android:id="@+id/OfficeName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="병원명"
                android:paddingLeft="30dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:inputType="text"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px" />

            <com.avocado.makeyoursmile.view.AVEditText
                android:id="@+id/OfficeAddress"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="주소"
                android:paddingLeft="30dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:inputType="text"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px" />

            <com.avocado.makeyoursmile.view.AVEditText
                android:id="@+id/OfficePhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="대표번호"
                android:paddingLeft="30dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:inputType="phone"
                />


            <com.avocado.makeyoursmile.view.AVTextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="사업자등록증 첨부"
                android:textColor="@color/mys_txt_dark_gray_83"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="15dp" />

            <com.avocado.makeyoursmile.view.AVTextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="19dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="담당자 정보"
                android:textColor="@color/mys_titlebar_0"
                android:textSize="12dp"
                android:textStyle="bold" />

            <com.avocado.makeyoursmile.view.AVEditText
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="이름"
                android:paddingLeft="30dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:inputType="text"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px" />

            <com.avocado.makeyoursmile.view.AVEditText
                android:id="@+id/PhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="전화번호"
                android:paddingLeft="30dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:inputType="phone"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px" />

            <com.avocado.makeyoursmile.view.AVEditText
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="E-Mail"
                android:paddingLeft="30dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:inputType="textEmailAddress"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            >


            <com.avocado.makeyoursmile.view.AVTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="- 정확한 정보 입력을 부탁 드립니다."
                android:textColor="@color/mys_titlebar_0"
                android:layout_marginTop="7dp"
                android:textSize="12dp"
                />

            <com.avocado.makeyoursmile.view.AVTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:layout_marginTop="7dp"
                android:text="- 접수 후 담당자를 통해 개별 연락 드립니다."
                android:textColor="@color/mys_titlebar_0"
                android:textSize="12dp"
                />

            <com.avocado.makeyoursmile.view.AVTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="- 추가 문의가 있으실 경우 아래 연락처로 연락 바랍니다."
                android:layout_marginTop="7dp"
                android:textColor="@color/mys_titlebar_0"
                android:textSize="12dp"
                />

            <com.avocado.makeyoursmile.view.AVTextView
                android:id="@+id/GNPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Tel. 070-7501-1051"
                android:layout_marginTop="7dp"
                android:textColor="@color/mys_titlebar_0"
                android:textSize="12dp"
                />

            <com.avocado.makeyoursmile.view.AVTextView
                android:id="@+id/GNEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Mail. gncomms.naver.com"
                android:layout_marginTop="7dp"
                android:textColor="@color/mys_titlebar_0"
                android:textSize="12dp"
                />


            <ImageView
                android:id="@+id/ApplyImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/shinchungicon" />


        </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>