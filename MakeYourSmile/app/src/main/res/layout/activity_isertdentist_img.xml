<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:avocado="http://schemas.avocado.com/mys"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mys_bg_238"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/TitleBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/mys_titlebar_0">


        <ImageView
            android:id="@+id/TitleLeftImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/top_back" />

        <ImageView
            android:id="@+id/TitleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/TitleLeftImg"
            android:src="@drawable/menu07"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/TitleSearchImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/searchicon"
            android:visibility="invisible" />


        <ImageView
            android:id="@+id/TitleLogoImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/TitleSearchImg"
            android:src="@drawable/makeyoursmile" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/TitleBar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.avocado.makeyoursmile.view.AVTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="치과 사진 첨부"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/UploadImg1"
                    android:layout_width="105dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/photoplus" />

                <ImageView
                    android:id="@+id/UploadImg2"
                    android:layout_width="105dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/photoplus" />

                <ImageView
                    android:id="@+id/UploadImg3"
                    android:layout_width="105dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/photoplus" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/UploadImg4"
                    android:layout_width="105dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/photoplus" />

                <ImageView
                    android:id="@+id/UploadImg5"
                    android:layout_width="105dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/photoplus" />

            </LinearLayout>


            <com.avocado.makeyoursmile.view.AVTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="의사사진1"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/UploadImg6"
                    android:layout_width="105dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/photoplus" />


            </LinearLayout>


            <com.avocado.makeyoursmile.view.AVTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="의사사진2"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/UploadImg7"
                    android:layout_width="105dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/photoplus" />


            </LinearLayout>


            <com.avocado.makeyoursmile.view.AVTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="의사사진3"
                android:textColor="@color/black"
                android:paddingLeft="15dp"
                android:textSize="13dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/UploadImg8"
                    android:layout_width="105dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/photoplus" />


            </LinearLayout>


            <RelativeLayout
                android:id="@+id/ReqBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/mys_titlebar_0">

                <com.avocado.makeyoursmile.view.AVTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="등록하기"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>